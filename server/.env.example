# Maroo Faucet Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# REQUIRED: Private Keys for Faucet Wallets
# ==============================================
PK="your_private_key_here"

# Chain-specific private keys (optional)
# C="your_c_chain_private_key"
# WAGMI="your_wagmi_chain_private_key"

# ==============================================
# REQUIRED: Google ReCaptcha Configuration
# ==============================================
CAPTCHA_SECRET="your_recaptcha_v3_secret_key"

# Optional: ReCaptcha v2 secret
# V2_CAPTCHA_SECRET="your_recaptcha_v2_secret_key"

# ==============================================
# OPTIONAL: Server Configuration
# ==============================================
PORT=8000

# Allowed origins for CORS (comma-separated, e.g., "http://localhost:3000,https://faucet.maroo.network")
# In development mode, defaults to http://localhost:3000
CORS_ALLOW_ORIGINS=http://localhost:3000

# Environment mode (development | production)
# Controls CORS behavior and other environment-specific settings
NODE_ENV=development