{
  "openapi": "3.0.0",
  "paths": {
    "/health/live": {
      "get": {
        "description": "Returns ok if the application process is alive.",
        "operationId": "HealthController_live",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LiveResponse"
                }
              }
            }
          }
        },
        "summary": "Liveness probe",
        "tags": ["Health"]
      }
    },
    "/health/ready": {
      "get": {
        "description": "Returns ok if the application is ready to serve requests (database and cache are connected).",
        "operationId": "HealthController_ready",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadyResponse"
                }
              }
            }
          },
          "503": {
            "description": "Service unavailable"
          }
        },
        "summary": "Readiness probe",
        "tags": ["Health"]
      }
    },
    "/version": {
      "get": {
        "description": "Returns the current application version.",
        "operationId": "VersionController_getVersion",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
                }
              }
            }
          }
        },
        "summary": "Application version",
        "tags": ["Version"]
      }
    },
    "/api/v1/auth/message": {
      "post": {
        "description": "Generates an ERC-4361 SIWE message and nonce for wallet signature.",
        "operationId": "AuthController_message",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MessageRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid address format"
          }
        },
        "summary": "Generate SIWE message",
        "tags": ["Auth"]
      }
    },
    "/api/v1/auth/signin": {
      "post": {
        "description": "Verifies the signed `ERC-4361` message and checks KYC attestation status.",
        "operationId": "AuthController_signIn",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignInResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "401": {
            "description": "Session required or invalid signature"
          }
        },
        "security": [
          {
            "cookie": []
          }
        ],
        "summary": "Sign in with Ethereum",
        "tags": ["Auth"]
      }
    },
    "/api/v1/auth/session": {
      "get": {
        "description": "Returns the current authenticated session information.",
        "operationId": "AuthController_session",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SessionResponse"
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          }
        },
        "security": [
          {
            "cookie": []
          }
        ],
        "summary": "Get current session",
        "tags": ["Auth"]
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "description": "Deletes the current session and clears the session cookie.",
        "operationId": "AuthController_logout",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogoutResponse"
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          }
        },
        "security": [
          {
            "cookie": []
          }
        ],
        "summary": "Logout",
        "tags": ["Auth"]
      }
    },
    "/api/v1/kyc/request": {
      "post": {
        "operationId": "KycController_request",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/KycRequestBody"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "KYC request created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "KYC already completed"
          },
          "502": {
            "description": "External service error"
          }
        },
        "security": [
          {
            "cookie": []
          }
        ],
        "summary": "Request KYC identity verification",
        "tags": ["KYC"]
      }
    },
    "/api/v1/kyc/verify": {
      "post": {
        "operationId": "KycController_verify",
        "parameters": [],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/KycVerifyResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized or verification failed"
          },
          "409": {
            "description": "Verification not completed or KYC already completed"
          },
          "502": {
            "description": "External service error"
          }
        },
        "security": [
          {
            "cookie": []
          }
        ],
        "summary": "Verify KYC and create attestation",
        "tags": ["KYC"]
      }
    }
  },
  "info": {
    "title": "KYC Attestation",
    "version": "0.2.3-dev.348d385"
  },
  "components": {
    "schemas": {
      "LiveResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok",
            "enum": ["ok"]
          }
        },
        "required": ["status"]
      },
      "ReadyResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok",
            "enum": ["ok"]
          },
          "checks": {
            "type": "object",
            "example": {
              "database": "ok",
              "cache": "ok"
            }
          }
        },
        "required": ["status", "checks"]
      },
      "VersionResponse": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "example": "1.0.0",
            "description": "Application version"
          }
        },
        "required": ["version"]
      },
      "MessageRequest": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "example": "0xAb5801a7D398351b8bE11C439e05C5B3259aeC9B",
            "description": "EVM wallet address (EIP-55 checksum)"
          }
        },
        "required": ["address"]
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "kyc.example.com wants you to sign in...",
            "description": "ERC-4361 formatted SIWE message"
          }
        },
        "required": ["message"]
      },
      "SignInRequest": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "kyc.example.com wants you to sign in...",
            "description": "Original SIWE message that was signed"
          },
          "signature": {
            "type": "string",
            "example": "0x...",
            "description": "Signature hex string"
          }
        },
        "required": ["message", "signature"]
      },
      "SignInResponse": {
        "type": "object",
        "properties": {
          "verified": {
            "type": "boolean",
            "example": false,
            "description": "KYC attestation status"
          }
        },
        "required": ["verified"]
      },
      "SessionResponse": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "example": "0xAb5801a7D398351b8bE11C439e05C5B3259aeC9B",
            "description": "Authenticated wallet address"
          },
          "chainId": {
            "type": "number",
            "example": 1,
            "description": "Chain ID"
          },
          "verified": {
            "type": "boolean",
            "example": false,
            "description": "KYC attestation verified"
          },
          "expiresAt": {
            "type": "string",
            "example": "2026-02-04T12:00:00Z",
            "description": "Session expiration time"
          }
        },
        "required": ["address", "chainId", "verified", "expiresAt"]
      },
      "LogoutResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true,
            "description": "Logout success"
          }
        },
        "required": ["success"]
      },
      "KycRequestBody": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string",
            "example": "01012345678",
            "description": "Phone number without hyphens (11 digits)"
          },
          "name": {
            "type": "string",
            "example": "홍길동",
            "description": "Real name"
          },
          "birthdate": {
            "type": "string",
            "example": "19900115",
            "description": "Birthdate in yyyyMMdd format"
          }
        },
        "required": ["phone", "name", "birthdate"]
      },
      "KycVerifyResponse": {
        "type": "object",
        "properties": {
          "verified": {
            "type": "boolean",
            "example": true
          },
          "attestationUid": {
            "type": "string",
            "example": "0x1234567890abcdef...",
            "description": "EAS attestation UID"
          },
          "txHash": {
            "type": "string",
            "example": "0xabcdef1234567890...",
            "description": "Transaction hash"
          },
          "address": {
            "type": "string",
            "example": "0xAb5801a7D398351b8bE11C439e05C5B3259aeC9B"
          },
          "issuedAt": {
            "type": "string",
            "example": "2026-02-03T12:03:00Z"
          },
          "expiresAt": {
            "type": "object",
            "example": "2027-02-03T12:03:00Z",
            "nullable": true
          }
        },
        "required": [
          "verified",
          "attestationUid",
          "txHash",
          "address",
          "issuedAt",
          "expiresAt"
        ]
      }
    }
  }
}
